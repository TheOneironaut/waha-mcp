  },
  "homepage": "https://github.com/TheOneironaut/waha-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@ngrok/ngrok": "^1.5.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
